	\begin{defn-title}[width=7cm]{}
	{
		\normalsize \textbf{\textit{#1}}
	}
	\end{defn-title}

	\begin{defn-theword}
	{
		\footnotesize
		\begin{mydef} #2
%		\label{def:{#2}}
		\end{mydef}
	}
	\end{defn-theword}


	\begin{defn-content}

	\justify
	#3

	\end{defn-content}

\end{defn-bg}
\tcolorboxend
}

